{
  "compilerOptions": {
    /* 기본 */
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* 경로 alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Node / ES 호환 */
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* 엄격성 */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* 기타 */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
